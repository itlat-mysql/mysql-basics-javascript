<% if (pages > 0) { %>
<div class="mt-3 d-flex justify-content-center">
    <ul class="pagination">
        <% for(let i = 1; i <= pages; i++) { %>
        <li class="page-item <% if (page === i) { %>active<% } %>">
            <a class="page-link" href="/pages/?page=<%= i %>"><%= i %></a>
        </li>
        <% } %>
    </ul>
</div>
<% } %>

